    <script src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.js"></script>

    <script type="text/javascript">

    var test = ["1","2","3", "4"];
    var source = ["https://images.pexels.com/photos/46710/pexels-photo-46710.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500", "https://images.pexels.com/photos/853168/pexels-photo-853168.jpeg?cs=srgb&dl=backlit-clouds-dusk-853168.jpg&fm=jpg", "https://images.unsplash.com/photo-1534278931827-8a259344abe7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80", "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTDaIkKmVgWpK8qr0dp6ZFOk-yAbA40Vt_nQMR5j770Kux5GrK3"];

    function insertCard() {
        for(var i = 0; i < test.length; i++) {
            var card = "<div class='card item' style='width: 18rem; transform: translateY(20*"+i+"px); display: inline-block; overflow: hidden; position: absolute'><img class='card-img-top' src='"+source[i]+"'><div class='card-body'><h4 class='card-title'>"+test[i]+"<p class='card-text'>Some text about product</p></h4></div></div>";

            $("#card-test").prepend(card);
        };
    };

    insertCard();

    var $cards = document.querySelectorAll(".item");
    $cards.forEach(function(item) {
            var hammer = new Hammer(item)
            hammer.on("swipeleft",function(){
            item.classList.add("animated", "slideOutLeft")
            })
            hammer.on("swiperight",function(){
            item.classList.add("animated", "slideOutRight")
    })

    })


    </script>
